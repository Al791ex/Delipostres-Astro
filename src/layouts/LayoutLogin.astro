---
import hasProfile from '../utils/profile'; 

const cookie: string = `${Astro.cookies.get(import.meta.env.COOKIE_NAME || "_Security_Login_")?.value}`;
const d = hasProfile(cookie);
let login: string = `${d.success}`;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Encoding" content="gzip" />
    <title translate="no">Login</title>
    <style>

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      text-decoration: none;
      scroll-behavior: smooth;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #494949;
      margin: 0;
      padding: 0;
    }

    .login {
      width: 400px;
      margin: 100px auto;
      background-color: #333333;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0px 0px 10px 0px rgba(99, 98, 98, 0.75);
      color: white;
    }

    .quote {
      font-style: italic;
      font-size: 20px;
    }

    .quote span {
      display: block;
      font-size: 14px;
      margin-top: 10px;
      font-style: normal;
      color: #757575;
    }

    .quote a {
      text-decoration: underline;
      color: rgba(30, 158, 243, 0.733);
    }

    .quote a:hover {
      color: rgb(51, 170, 250);
    }



    .login button {
      display: flex;
      outline: 0;
      padding: 8px 16px;
      border-radius: 6px;
      font-size: 13px;
      background: #373737;
      box-shadow: 0 1px 6px rgba(0, 0, 0, 0.12), 0 1px 4px rgba(0, 0, 0, 0.24);
      color: #fff;
      cursor: pointer;
      border: 2px solid transparent;
      transition: all 0.4s ease;
      margin: auto;
      margin-top: 2.5%;
      margin-bottom: 5%;
    }

    .login button:hover {
      border-color: #373737;
      background-color: #494949;
      color: #373737;
    }

    .login button:disabled,
    button[disabled] {
      background-color: #2e2e2e;
      color: #666;
    }

    .login h1 {
      text-align: center;
      margin-bottom: 2.5%;
    }

    .login input {
      background-color: #2f2f30;
      outline: 0;
      border: none;
      border-radius: 20px;
      color: #fff;
      padding: 10px 22px;
      border: 2px solid #2f2f30;
      min-width: 300px;
      box-shadow: 0 1px 6px rgba(0, 0, 0, 0.12), 0 1px 4px rgba(0, 0, 0, 0.24);
      margin-top: 2.5%;
      margin-bottom: 5%;
    }

    .login input:focus {
      border: 2px solid #3a3d41;
    }

    .login label {
      font-size: 18px;
    }

    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Login" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />
    <meta property="og:type" content="website" />
    <meta property="og:color" content="#1c041b" />
    <link rel="icon" href="/img/favicon.ico" />
    <link rel="apple-touch-icon" href="/img/favicon.ico" />
    <link rel="apple-touch-icon-precomposed" href="/img/favicon.ico" />
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <script is:inline>
      window.onload = function () {
        const loginData = document.getElementById("loginInput").value;
        if (loginData == "true") {
          window.location.href = "/";
        }
      };
    </script>
  </head>
  <body>
    <div class="container">
      <input type="hidden" name="loginInput" id="loginInput" value={login} />
      <slot />
    </div>
  </body>
</html>
