            <div class="col-md-6 col-lg-3">
              <h3 class="mb-4">{category.title}</h3>
              <div class="row">
                <div class="col-12">
                  {data.products.filter(product => product.category === category.title).map(product => (
                    <CardProduct 
                      thumb_src={product.thumb_src}
                      thumb_alt={product.thumb_alt}
                      color={product.color}
                      title={product.title}
                      price={product.price}
                      position="left"
                    />
                  ))}
                </div>
              </div>
            </div>
