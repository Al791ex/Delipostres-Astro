          </div><div class="col-md-6 col-lg-3">
          <a href="#DPostres"><div class="card card-background align-items-start mb-4 mb-lg-0 undefined"><div class="full-background" style="background-image:url(/delipostres//ImagesDeli/Postresportada.jpg);background-size:cover"></div><div class="card-body text-center w-100 pt-8"><div class="d-block mt-10"><h4 class="text-white font-weight-bolder">Postres Tradicionales</h4><p class="text-white font-weight-bold mb-1">¡Ser Venezolano Nunca Había Sido Tan Delicioso!</p><a href="#" class="text-white text-sm font-weight-semibold mb-0" &gt;</a></div></div></div></a>
          </div>
          </div>



      <PromoSectionLarge 
        title="¡Promoción de la semana!"
        full_description={data.products[4].full_description ?? ""}  
        pageHeaderBgImg={"../ImagesDeli/Tortapiñata.jpg"} 
        pageHeaderMinVh="70vh"
        pageHeaderRadius="5rem"
      /> <!-- Trae la data con "data.products y el numero dentro del cuadro determina cual producto trae-->

      <div class="row">
      
      
      <main>
      
        <div class="container mt-5">   
          <div class="d-block text-center mb-2">
    
          <div class="row">
            <h1 class="mb-4">Nuestros Productos</h5>
              <div id="DGalleta">
                <h2>Galletas</h2>
              </div>
        
      
            <hr class="dark horizontal my-2" />
      
            <div class="container mt-3"></div>
            <div class="row">
              {data.products.filter((product) => product.category === "Galletas").map((product) => (
                <div class="col-md-6 col-lg-3">
              <CardProduct 
                id={product.id}
                category={product.category}
                sizes={product.sizes}
                thumb_src={product.thumb_src}
                full_description={product.full_description}
                thumb_alt={product.thumb_alt}
                color={product.color}
                title={product.title}
                price={product.price}
                position="left"
              />
                </div>
              ))}
            </div>
            
            <div id="DTortas">
              <h2>Tortas</h2>
            </div>
      
      
            <hr class="dark horizontal my-2" />
      
            <div class="container mt-3"></div>
            <div class="row">
              {data.products.filter((product) => product.category === "Tortas").map((product) => (
                <div class="col-md-6 col-lg-3">
              <CardProduct 
