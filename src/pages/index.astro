<Layout title="Delipostres">
    <CartProvider>
    <main>
      <Navbar />
      <PromoSectionLarge 
        title={"DeliPostres"}
        full_description={data.products[0].full_description ?? ""}
        pageHeaderBgImg={"../ImagesDeli/Generalportada.jpg"} 
        pageHeaderMinVh="70vh"
        pageHeaderRadius="0rem"
      />

      <div class="container my-3">
        <div class="d-block text-center mb-5">
        
      
        </div>
        <div class="row mb-4">
          <div class="d-block text-center mb-5">
          <h3>Categorías</h3>

          <a class="text-dark font-weight-bold">Elije Entre Nuestros Deliciosos Postres</a>
          </div>
          <div class="row justify-content-center mb-4" >

          <div class="col-md-6 col-lg-3">
          <a href="#DGalleta"><div class="card card-background align-items-start mb-4 mb-lg-0 undefined"><div class="full-background" style="background-image:url(/delipostres//ImagesDeli/Galletasportada.jpg);background-size:cover"></div><div class="card-body text-center w-100 pt-8"><div class="d-block mt-10"><h4 class="text-white font-weight-bolder">Galletas</h4><p class="text-white font-weight-bold mb-1">¡Degusta Nuestras Deliciosas Galletas!</p><a href="#" class="text-white text-sm font-weight-semibold mb-0"&gt;</a></div></div></div></a>
          </div><div class="col-md-6 col-lg-3">
